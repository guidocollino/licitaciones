<%- model_class = Budget -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:customer) %>:</strong></dt>
  <dd><%= @budget.customer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street) %>:</strong></dt>
  <dd><%= @budget.street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:locality) %>:</strong></dt>
  <dd><%= @budget.locality %></dd>
  <dt><strong><%= model_class.human_attribute_name(:with_payment) %>:</strong></dt>
  <dd><%= @budget.with_payment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_number) %>:</strong></dt>
  <dd><%= @budget.file_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:private_number) %>:</strong></dt>
  <dd><%= @budget.private_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:opening) %>:</strong></dt>
  <dd><%= @budget.opening %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @budget.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:offer) %>:</strong></dt>
  <dd><%= @budget.offer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery) %>:</strong></dt>
  <dd><%= @budget.delivery %></dd>
  <dt><strong><%= model_class.human_attribute_name(:place_of_delivery) %>:</strong></dt>
  <dd><%= @budget.place_of_delivery %></dd>
  <dt><strong><%= model_class.human_attribute_name(:general_markup) %>:</strong></dt>
  <dd><%= @budget.general_markup %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              budgets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_budget_path(@budget), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              budget_path(@budget),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
